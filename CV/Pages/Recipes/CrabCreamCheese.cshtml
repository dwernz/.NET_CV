@page
@model CV.Pages.Recipes.CrabCreamCheeseModel
@{
    ViewData["Title"] = "Crab-Cream Cheese Topping";
}

<section class="dark-section">
    <a class="nav-link text-light" id="recipe-link" asp-area="" asp-page="/Recipes">Back to Recipes</a>
    <div class="recipe">
        <h1 class="text-center">Crab-Cream Cheese Topping</h1>
        <h3>Yield: 4 lb</h3>
        <h2>Equipment:</h2>
        <ul>
            <li>1 - Bowl</li>
            <li>1 - Rubber Spatula</li>
        </ul>
        <h2>Ingredients:</h2>
        <ul>
            <li>3 lb Cream Cheese, softened</li>
            <li>1 tbsp Garlic Powder</li>
            <li>1/4 cup Sun-dried Tomatoes, minced</li>
            <li>1 tbsp + 2 tsp Basil, dried</li>
            <li>1 tsp Oregano, dried</li>
            <li>1 tsp Crushed Red Pepper</li>
            <li>1 lb Claw Meat</li>
        </ul>
        <h2>Instructions:</h2>
        <ol>
            <li>Mix all ingredients together</li>

        </ol>
        <h2>Notes:</h2>
        <ul>
            <li>Portion to 4 oz plastic souffle cups, or in 1/2 cup portions.</li>
            <li>Each portion is good for an 8-in pita flatbread pizza.</li>
            <li>Also use for Alfredo sauce for a more flavorful sauce.</li>
        </ul>
    </div>
</section>
