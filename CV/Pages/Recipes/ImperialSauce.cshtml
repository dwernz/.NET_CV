@page
@model CV.Pages.Recipes.ImperialSauceModel
@{
    ViewData["Title"] = "Maryland Crabcake Mix";
}

<section class="dark-section">
    <a class="nav-link text-light" id="recipe-link" asp-area="" asp-page="/Recipes">Back to Recipes</a>
    <div class="recipe">
        <h1 class="text-center">Maryland Crabcake Mix</h1>
        <h3>Yield: About 1 quart</h3>
        <h2>Equipment:</h2>
        <ul>
            <li>1 - Bowl</li>
            <li>1 - Whisk</li>
        </ul>
        <h2>Ingredients:</h2>
        <ul>
            <li>1 cup <a class="recipe-a" asp-area="" asp-page="/Recipes/MarylandCrabcakeMix">Maryland Crabcake Mix</a></li>
            <li>2 oz Sherry</li>
            <li>1 tsp Mace</li>
            <li>1 tsp Nutmeg, ground</li>
            <li>3 cup Mayo</li>
        </ul>
        <h2>Instructions:</h2>
        <ol>
            <li>Combine all ingredients and mix until well combined.</li>
        </ol>
        <h2>Notes:</h2>
        <ul>
            <li>Mix with crabmeat, and place under a broiler until hot in center and browned on top.</li>
        </ul>
    </div>
</section>

