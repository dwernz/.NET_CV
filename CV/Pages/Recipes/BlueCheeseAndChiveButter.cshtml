@page
@model CV.Pages.Recipes.BlueCheeseAndChiveButterModel
@{
    ViewData["Title"] = "Blue Cheese and Chive Compound Butter";
}

<section class="dark-section">
    <a class="nav-link text-light" id="recipe-link" asp-area="" asp-page="/Recipes">Back to Recipes</a>
    <div class="recipe">
        <h1 class="text-center">Blue Cheese and Chive Compound Butter</h1>
        <h3>Yield: 1 lb</h3>
        <h2>Equipment:</h2>
        <ul>
            <li>1 - Bowl</li>
            <li>1 - Whisk</li>
            <li>1 - Parchment Paper</li>
        </ul>
        <h2>Ingredients:</h2>
        <ul>
            <li>1 lb Butter, room temp</li>
            <li>8 tbsp Blue Cheese (Roquefort or Maytag work best)</li>
            <li>4 tbsp Chives, finely chopped</li>
            <li>Pinch of Salt</li>
        </ul>
        <h2>Instructions:</h2>
        <ol>
            <li>Mix all ingredients together</li>
            <li>Place mixture into the center of the parchment, and roll into a 1 inch thick log.</li>
            <li>Refrigerate</li>
            <li>Slice as needed</li>

        </ol>
        <h2>Notes:</h2>
        <ul>
            <li>Add plastic wrap around the parchment for better storage.</li>
            <li>Great for steaks.</li>
        </ul>
    </div>
</section>
